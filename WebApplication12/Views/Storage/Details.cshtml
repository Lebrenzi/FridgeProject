@model IEnumerable<WebApplication12.Models.Shelf>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            
            <th>
                Category of item
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>               
                <td>  
                    <a asp-action="Details" asp-controller="Shelf" asp-route-id="@item.ShelfId">Details</a> |
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    
