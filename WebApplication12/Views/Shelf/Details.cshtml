@model IEnumerable<WebApplication12.Models.Itempattern>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BarCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongLife)
            </th>
            <th>
                Category of item
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BarCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongLife)
                </td>
                <td>
                   
                    @Html.DisplayFor(modelItem => item.CategoryItemPattern.Type)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Itempatterns" asp-route-id="@item.ItemPatternId">Edit</a> |
                    <a asp-action="Details" asp-controller="Itempatterns" asp-route-id="@item.ItemPatternId">Details</a> |
                    <a asp-action="Delete" asp-controller="Itempatterns" asp-route-id="@item.ItemPatternId">Delete</a> 
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    
